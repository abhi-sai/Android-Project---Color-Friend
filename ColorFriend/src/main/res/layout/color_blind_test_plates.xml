<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/color_blind_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="org.opencv.samples.colorblobdetect.ColorBlindTest">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="40sp"
        android:text="Ishihara Plate 1"
        android:textColor="#B71C1C"
        android:id="@+id/ishihara_plate"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:src="@drawable/plate1"
        android:id="@+id/plate_image_view" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:id="@+id/diagnosis_text"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:text="NEXT"
        android:textStyle="bold"
        android:textSize="20sp"
        android:clickable="false"
        android:id="@+id/next_button"/>

</LinearLayout>
